doctype html
html(lang='fr')
  head
    title= title
    meta(charset='utf-8')
    link(rel='stylesheet', href='/stylesheets/style.css')

    // Import Google Icon Font
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
    
    // Compiled and minified CSS
    link(rel='stylesheet' href='/stylesheets/materialize.min.css')

    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1')
  
  body

    script(src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(src='/javascripts/materialize.min.js')
    script(src='/javascripts/material.js')



    div(class='container-fluid')
      div(class='row')
        div(class='col s2')
          block sidebar
            ul(class='collection z-depth-2')
              li 
                a.collection-item.center-align.active(href='/') Retour au site
              li 
                a.collection-item(href='/catalog') Accueil
              li 
                a.collection-item(href='/catalog/events') Tous les évenements
              li 
                div.divider
              li 
                a.collection-item(href='/catalog/event/create') Créer un nouvel evenement
        div(class='col s6')
          block content

